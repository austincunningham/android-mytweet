<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.mytweet">
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/twittericon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".app.MyTweetApp">
        <activity android:name=".activities.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TweetListActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".activities.SignUp"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.Login"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.MyTweet"
            android:label="@string/app_name" >
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="app.mytweet.activities.TweetListActivity"/>
        </activity>
    </application>

</manifest>